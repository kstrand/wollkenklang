
<header><h1>My First Music Streaming Application</h1></header>

<div class="clear"></div>

<section id="sidebar">
	   <h2> HTML5 Audio</h2>
     <section id="audio">
     			No song playing right now.
     </section>

<%= render "form" %>
</section>

<section id="main">
			<h2> Download/Delete Songs</h2>
		<table>
		  <% @songs.each do |song| %>
				  <tr>
				  	<td><%= song.key %> -   <%= link_to "Delete", "songs/delete/?song=" + song.key, :confirm => 'Are you sure you want to delete ' + song.key + '?' %></td>
				  	<td><%= link_to "Download", download_url_for(song.key) %></td>
				  	<td><%= link_to "Torrent", torrent_url_for(song.key) %></td>
				  	<td><%= link_to "HTML5 Audio", download_url_for(song.key), :class => "html5" %> </td>
				  </tr>
		  <% end %>
		</table>
</section>

<div class="clear"></div>










